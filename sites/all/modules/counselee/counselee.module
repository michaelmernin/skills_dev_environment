function counselee_webform_validation_validate($validator_name, $items, $components, $rule) {

  if ($items) {
    switch ($validator_name) {
      case 'check_comment':
        $select_arr = array();
        $comment_arr = array();

        foreach ($items as $key => $val) {
          if ($components[$key]['type'] == 'select') {
            $select_arr[$components[$key]['form_key']] = $val;
          }
          else if ($components[$key]['type'] == 'textarea') {
            $comment_arr[$components[$key]['form_key']] = array('key' => $key, 'val' => $val);
          }
        }

        foreach ($select_arr as $key => $val) {
          if (isset($comment_arr[$key . '_comments'])) {
            $comment_val = $comment_arr[$key . '_comments']['val'];
            $comment_key = $comment_arr[$key . '_comments']['key'];
          }
          else if (isset($comment_arr[$key . '_comment'])) {
            $comment_val = $comment_arr[$key . '_comment']['val'];
            $comment_key = $comment_arr[$key . '_comment']['key'];
          }
          else {
            $comment_val = 'Don\'t need to check';
          }
          $select_val = $val;
          if (($select_val != '3' || $select_val != 3) && ($comment_val == '')) {
            $field_name = get_field_name($key);
            $errors[$comment_key] = t('%item Comment field is required,because its score is not 3 point.', array('%item' => $field_name));
          }
        }
        if (isset($errors))
          return $errors;
        break;
    }
  }
}

function get_field_name($form_key) {
  $field_name = '';  //strtoupper() 
  $form_key = ucfirst($form_key);

  for ($i = 0; $i < strlen($form_key); $i++) {
    $char = substr($form_key, $i, 1);
    if ($char == '_') {
      $i++;
      $field_name .= ' ' . ucfirst(substr($form_key, $i, 1));
    }
    else {
      $field_name.=$char;
    }
  }
  return $field_name;
}

